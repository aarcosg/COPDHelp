<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_copdps_intro"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/copdcat_fragment_background"
    android:layout_weight="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        style="@style/QuizTitleText"
        android:text="@string/copdcat_intro_title"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="3"
        android:textColor="@android:color/white"
        style="@style/TextAppearance.AppCompat.Display4"
        android:fontFamily="sans-serif-light" />

    <com.bluejamesbond.text.DocumentView
        android:id="@+id/result_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:documentView_offsetY="@dimen/wide_space"
        app:documentView_cacheConfig="auto_quality"
        app:documentView_insetPadding="@dimen/wide_space"
        app:documentView_textAlignment="justified"
        app:documentView_textColor="@android:color/white"
        app:documentView_textFormat="plain"
        app:documentView_textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="64dp" />

</LinearLayout>