<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_copdps_question1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/copdcat_fragment_background"
    android:layout_weight="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        style="@style/QuizTitleText"
        android:text="@string/copdcat_intro_title"/>

    <TextView
        android:id="@+id/question_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        style="@style/QuizQuestionText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:padding="@dimen/wide_space"
        android:background="@android:color/white">

        <RadioGroup
            android:id="@+id/answer_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/radio0"
                style="@style/CustomRadioButtonTextAbove"
                android:text="0" />

            <RadioButton
                android:id="@+id/radio1"
                style="@style/CustomRadioButtonTextAbove"
                android:text="1" />

            <RadioButton
                android:id="@+id/radio2"
                style="@style/CustomRadioButtonTextAbove"
                android:text="2" />

            <RadioButton
                android:id="@+id/radio3"
                style="@style/CustomRadioButtonTextAbove"
                android:text="3" />

            <RadioButton
                android:id="@+id/radio4"
                style="@style/CustomRadioButtonTextAbove"
                android:text="4" />

            <RadioButton
                android:id="@+id/radio5"
                style="@style/CustomRadioButtonTextAbove"
                android:text="5" />

        </RadioGroup>

        <TextView
            android:id="@+id/answer0_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_radio_group"
            style="@style/QuizAnswerAboveRadioGroup.Left" />

        <TextView
            android:id="@+id/answer5_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_radio_group"
            style="@style/QuizAnswerAboveRadioGroup.Right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="64dp" />

</LinearLayout>