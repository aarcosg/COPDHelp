<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListDivider">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DetailsCardHeaderText" parent="TextAppearance.AppCompat.Small"/>

    <style name="DetailsCardBodyText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DetailsCardBodyText.Bold" parent="DetailsCardBodyText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppCompat.Button.Small.Borderless" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="QuizQuestionText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/wide_space</item>
        <item name="android:paddingRight">@dimen/wide_space</item>
    </style>

    <style name="QuizTitleText">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CustomRadioButtonTextAbove" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="QuizAnswerAboveRadioGroup">
        <item name="android:maxWidth">@dimen/answer_above_radio_max_width</item>
    </style>

    <style name="QuizAnswerAboveRadioGroup.Left" parent="QuizAnswerAboveRadioGroup">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="QuizAnswerAboveRadioGroup.Right" parent="QuizAnswerAboveRadioGroup">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="card.native.header_simple_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/md_teal_700</item>
    </style>

    <style name="TextCell">
        <item name="android:padding">@dimen/cell_table_padding</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/cell_shape</item>
    </style>

</resources>
